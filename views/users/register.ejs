<% layout('layout/boilerplate') %>
<div class="mt-4 pt-4">
  <div class="row mt-4">
    <h1 class="text-center">Register as a New User</h1>

    <form
      class="mb-4 needs-validation"
      action="/register"
      method="POST"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="col-md-6 offset-0 offset-md-3">
        <label class="form-label" for="email">User Email</label>
        <input
          class="form-control"
          type="email"
          name="user[email]"
          id="email"
          placeholder="Enter User Email"
          required
        />
        <br />
        <label class="form-label" for="username">Username</label>
        <input
          class="form-control"
          type="text"
          name="user[username]"
          id="username"
          placeholder="Enter Username"
          required
        />
        <br />
        <label class="form-label" for="password">Password</label>
        <input
          class="form-control"
          type="password"
          name="user[password]"
          id="password"
          placeholder="Enter Password"
          required
        />
        <br />
        <label class="form-label" for="avatar">Profile Picture</label>
        <input
          class="form-control"
          type="file"
          name="image"
          id="avatar"
          required
        />
      </div>
      <br />
      <div class="d-flex justify-content-center gap-4">
        <button class="btn btn-outline-success">Register</button>
        <a class="btn btn-outline-danger" href="/campgrounds">Cancel</a>
      </div>
      <div class="mt-4 d-flex flex-column align-items-center">
        <h1 class="text-center">Already Have an Account?</h1>
        <a class="btn btn-outline-dark" href="/login">Log In</a>
      </div>
    </form>
  </div>
</div>
