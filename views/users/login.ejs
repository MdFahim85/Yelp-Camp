<% layout('layout/boilerplate') %>
<div class="mt-4 pt-4">
  <div class="row mt-4">
    <h1 class="text-center">Login to your Account</h1>

    <form
      class="mb-4 needs-validation"
      action="/login"
      method="POST"
      novalidate
    >
      <div class="col-md-6 offset-0 offset-md-3">
        <label class="form-label" for="username">Username</label>
        <input
          class="form-control"
          type="text"
          name="username"
          id="username"
          placeholder="Enter Username"
          required
        />
        <br />
        <label class="form-label" for="password">Password</label>
        <input
          class="form-control"
          type="password"
          name="password"
          id="password"
          placeholder="Enter Password"
          required
        />
      </div>
      <br />
      <div class="d-flex justify-content-center gap-4">
        <button class="btn btn-outline-success">Login</button>
        <a class="btn btn-outline-danger" href="/campgrounds">Cancel</a>
      </div>
      <div class="mt-4 d-flex flex-column align-items-center">
        <h1 class="text-center">Are you new here?</h1>
        <a class="btn btn-outline-dark" href="/register">Register</a>
      </div>
    </form>
  </div>
</div>
